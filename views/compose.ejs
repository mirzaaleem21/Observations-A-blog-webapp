<%- include('partials/header'); -%>


<form action="/" method="POST" style="margin-bottom: 30%;">





  
  <div class="mb-3 pt-0">
    <label for="exampleFormControlInput1" >Title</label>
    <input type="text" placeholder="Placeholder" required=true name="newTitle" class="px-3 py-3 placeholder-gray-400 text-gray-700 relative bg-white bg-white rounded text-sm shadow outline-none focus:outline-none focus:shadow-outline w-full"/>
  </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Description</label>
        <textarea class="form-textarea mt-1 block w-full" rows="8"   rows="8" name="newContent" cols="70"></textarea>
      </div>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">Markdown</label>
        <textarea required=true class="form-textarea mt-1 block w-full" rows="8"   rows="8" name="markdown" cols="70"></textarea>
      </div>
      <button  type="submit" class="bg-purple-500 text-white active:bg-purple-600 font-bold uppercase text-sm px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1" type="button" style="transition: all .15s ease">
     Publish
      </button>

      <button class="bg-gray-500 text-white active:bg-gray-600 font-bold uppercase text-sm px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1" type="button" style="transition: all .15s ease">
        <a href="/"> Cancel</a>
      </button>

    </form>





